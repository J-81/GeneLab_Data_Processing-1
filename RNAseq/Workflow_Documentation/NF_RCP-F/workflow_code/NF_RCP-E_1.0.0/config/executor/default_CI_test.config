// Everything is local, no time limits
// Not expected to working for production runs due to high RAM needs for processes like building indexes

process {
  executor='local'

  withLabel: big_mem {
    memory = 4.GB
  }
  withLabel: maxCPU {
    cpus = 2
  }

  // time='20m'

  // Allow itermittent docker related errors to retry
  errorStrategy = { 
    task.exitStatus == 127 ? 'retry' : 'terminate' 
  }
}

  